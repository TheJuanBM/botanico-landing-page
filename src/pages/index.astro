---
import { getImage } from 'astro:assets';
import Footer from '../components/Footer.astro';
import GuestSelector from '../components/GuestSelector';
import Navbar from '../components/Navbar.astro';
import RoomCard from '../components/RoomCard.astro';
import StayDatePicker from '../components/StayDatePicker';
import Layout from '../layouts/Layout.astro';
import { rooms } from '../services/rooms';

import heroImg1 from '../assets/botanico/images/hero-1.webp';
import heroImg2 from '../assets/botanico/images/hero-2.webp';
import heroImg3 from '../assets/botanico/images/hero-3.webp';
import heroImg4 from '../assets/botanico/images/hero-4.webp';

const optimizedHero1 = await getImage({ src: heroImg1, width: 1920, format: 'webp', quality: 80 });
const optimizedHero2 = await getImage({ src: heroImg2, width: 1920, format: 'webp', quality: 85 });
const optimizedHero3 = await getImage({ src: heroImg3, width: 1920, format: 'webp', quality: 80 });
const optimizedHero4 = await getImage({ src: heroImg4, width: 1920, format: 'webp', quality: 80 });
---

<Layout
  title="Reserva tu Habitación - Hotel Botánico | Mejor Tarifa Garantizada"
  description="Reserva directamente en el único hotel 4 estrellas de Caucasia. Mejor tarifa garantizada, cancelación flexible y servicios premium incluidos."
>
  <!-- Preload solo de la primera imagen del carrusel (LCP) -->
  <Fragment slot="head">
    <link rel="preload" as="image" href={optimizedHero2.src} fetchpriority="high" />
  </Fragment>

  <Navbar />

  <main id="main-content">
    <!-- Hero Section con Formulario Integrado -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
      <!-- Background Image Carousel with Overlay -->
      <div class="absolute inset-0 bg-negro-suave">
        <div
          class="absolute inset-0 bg-gradient-to-b from-negro-suave/80 via-negro-suave/40 to-negro-suave/90 z-10"
        >
        </div>
        <!-- Carrusel automático -->
        <div class="hero-carousel absolute inset-0">
          <img
            src={optimizedHero1.src}
            alt="Hotel Botánico - Piscina"
            width={optimizedHero1.attributes.width}
            height={optimizedHero1.attributes.height}
            class="carousel-slide w-full h-full object-cover absolute inset-0"
            loading="lazy"
            decoding="async"
          />
          <img
            src={optimizedHero2.src}
            alt="Hotel Botánico - Habitación"
            width={optimizedHero2.attributes.width}
            height={optimizedHero2.attributes.height}
            class="carousel-slide w-full h-full object-cover absolute inset-0"
            loading="eager"
            decoding="async"
            fetchpriority="high"
          />
          <img
            src={optimizedHero3.src}
            alt="Hotel Botánico - Entrada"
            width={optimizedHero3.attributes.width}
            height={optimizedHero3.attributes.height}
            class="carousel-slide w-full h-full object-cover absolute inset-0"
            loading="lazy"
            decoding="async"
          />
          <img
            src={optimizedHero4.src}
            alt="Hotel Botánico - Edificio"
            width={optimizedHero4.attributes.width}
            height={optimizedHero4.attributes.height}
            class="carousel-slide w-full h-full object-cover absolute inset-0"
            loading="lazy"
            decoding="async"
          />
        </div>
      </div>

      <!-- Content -->
      <div class="relative z-20 w-full px-5 sm:px-6 lg:px-8 py-24 md:py-20">
        <div class="max-w-5xl mx-auto">
          <!-- Título - Versión premium -->
          <div class="text-center mb-10 md:mb-12">
            <!-- Decorative line -->
            <div
              class="flex items-center justify-center gap-4 md:gap-6 mb-6 md:mb-8 animate-fade-in"
            >
              <div class="h-px w-12 md:w-20 bg-gradient-to-r from-transparent to-cafe-claro/60">
              </div>
              <span
                class="text-cafe-claro/80 text-xs md:text-sm tracking-[0.3em] uppercase font-light"
                >Caucasia, Antioquia</span
              >
              <div class="h-px w-12 md:w-20 bg-gradient-to-l from-transparent to-cafe-claro/60">
              </div>
            </div>

            <h1
              class="font-serif text-[2.75rem] sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-4 md:mb-6 leading-[1.1] tracking-tight animate-fade-in"
            >
              Hotel Botánico
            </h1>

            <!-- Badge de estrellas -->
            <div
              class="flex items-center justify-center gap-1 md:gap-1.5 mb-5 md:mb-6 animate-fade-in-delay"
            >
              <svg
                class="w-4 h-4 md:w-5 md:h-5 text-cafe-claro"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                ></path>
              </svg>
              <svg
                class="w-4 h-4 md:w-5 md:h-5 text-cafe-claro"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                ></path>
              </svg>
              <svg
                class="w-4 h-4 md:w-5 md:h-5 text-cafe-claro"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                ></path>
              </svg>
              <svg
                class="w-4 h-4 md:w-5 md:h-5 text-cafe-claro"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                ></path>
              </svg>
            </div>

            <p
              class="text-base sm:text-xl md:text-2xl text-white/90 mb-6 md:mb-8 max-w-3xl mx-auto leading-relaxed animate-fade-in-delay font-light tracking-wide"
              style="text-shadow: 0 2px 12px rgba(0,0,0,0.5);"
            >
              <span class="hidden md:inline">Reserva tu estadía en el mejor hotel de la zona</span>
              <span class="md:hidden"
                >Una experiencia de lujo <br class="sm:hidden" />en el corazón del Bajo Cauca</span
              >
            </p>
          </div>

          <!-- Formulario de Reserva - Versión móvil premium -->
          <div
            class="bg-black/50 backdrop-blur-sm rounded-3xl md:rounded-2xl shadow-2xl p-5 sm:p-6 md:p-8 animate-fade-in-delay-2"
          >
            <!-- Encabezado del formulario móvil -->
            <div class="md:hidden mb-5 text-center">
              <p class="text-white text-sm font-medium tracking-wide uppercase">Reserva Directa</p>
            </div>

            <form id="reservationForm" action="/reservar" method="get">
              <div class="grid grid-cols-1 md:grid-cols-12 gap-5 md:gap-6 items-end">
                <!-- Date Range Picker para estadía -->
                <div class="md:col-span-5">
                  <StayDatePicker client:only="react" />
                </div>

                <!-- Personas -->
                <div class="md:col-span-5">
                  <GuestSelector client:only="react" />
                </div>

                <!-- Botón -->
                <div class="md:col-span-2 mt-2 md:mt-0">
                  <button
                    type="submit"
                    class="w-full flex items-center justify-center gap-2 bg-verde-oliva text-white font-semibold px-6 py-4 md:py-3 rounded-xl md:rounded-lg hover:bg-negro-suave transition-all duration-300 shadow-lg hover:shadow-xl h-auto md:h-[46px] text-base md:text-sm tracking-wide"
                  >
                    <span>Reservar</span>
                    <svg
                      class="w-5 h-5 md:hidden"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </button>
                </div>
              </div>

              <!-- Indicador de noches -->
              <div id="nightsIndicator" class="hidden mt-4 text-center">
                <p class="text-lg font-semibold text-negro-suave">
                  <span id="nightsCount">0</span>
                  <span id="nightsText">noches</span>
                </p>
              </div>

              <!-- Garantías - Versión móvil mejorada -->
              <div
                class="flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-6 text-xs text-negro-suave/70 mt-5 md:mt-4 pt-4 md:pt-0 border-t md:border-t-0 border-negro-suave/10"
              >
                <div class="flex items-center gap-2">
                  <svg
                    class="w-4 h-4 text-verde-oliva"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                    ></path>
                  </svg>
                  <span class="tracking-wide text-white">Mejor precio garantizado</span>
                </div>
                <div class="hidden sm:block w-1 h-1 rounded-full bg-white"></div>
                <div class="flex items-center gap-2">
                  <svg
                    class="w-4 h-4 text-verde-oliva"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="tracking-wide text-white">Cancelación gratuita</span>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Scroll Indicator - Mejorado para móvil -->
      <div
        class="absolute bottom-6 md:bottom-8 left-1/2 transform -translate-x-1/2 z-20 animate-bounce"
      >
        <div class="flex flex-col items-center gap-2">
          <span class="text-white/60 text-[10px] tracking-[0.2em] uppercase hidden md:block"
            >Descubre más</span
          >
          <div
            class="w-6 h-10 md:w-auto md:h-auto rounded-full border-2 border-white/40 flex items-start justify-center p-1.5 md:border-0 md:p-0"
          >
            <div class="w-1.5 h-3 bg-white/70 rounded-full animate-scroll-down md:hidden"></div>
            <svg
              class="hidden md:block w-6 h-6 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </div>
        </div>
      </div>
    </section>

    <!-- Beneficios de Reservar Directo -->
    <section class="py-14 md:py-16 bg-beige-premium relative overflow-hidden">
      <!-- Decoración sutil de fondo -->
      <div class="absolute inset-0 opacity-[0.03]">
        <div
          class="absolute top-0 right-0 w-96 h-96 bg-verde-oliva rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"
        >
        </div>
        <div
          class="absolute bottom-0 left-0 w-96 h-96 bg-cafe-claro rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2"
        >
        </div>
      </div>

      <div class="container mx-auto px-5 sm:px-6 lg:px-8 relative z-10">
        <div class="max-w-6xl mx-auto">
          <!-- Título con decoración móvil -->
          <div class="text-center mb-10 md:mb-10">
            <span
              class="text-verde-oliva text-xs tracking-[0.25em] uppercase font-medium block mb-3 md:hidden"
              >Exclusivo Online</span
            >
            <h2 class="font-serif text-2xl md:text-3xl font-bold text-negro-suave">
              ¿Por qué reservar con nosotros?
            </h2>
          </div>

          <!-- Grid de beneficios - Diseño móvil premium -->
          <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-8">
            <div
              class="benefit-card text-center p-5 md:p-0 bg-white/60 md:bg-transparent rounded-2xl md:rounded-none"
            >
              <div
                class="w-14 h-14 md:w-16 md:h-16 bg-gradient-to-br from-verde-oliva to-verde-oliva/80 rounded-2xl md:rounded-full flex items-center justify-center mx-auto mb-3 md:mb-4 shadow-lg shadow-verde-oliva/20"
              >
                <svg
                  class="w-7 h-7 md:w-8 md:h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
                  ></path>
                </svg>
              </div>
              <h3 class="font-semibold text-negro-suave mb-1 md:mb-2 text-sm md:text-base">
                Mejor Precio
              </h3>
              <p class="text-negro-suave/70 text-xs md:text-sm leading-relaxed">
                Tarifa garantizada
              </p>
            </div>

            <div
              class="benefit-card text-center p-5 md:p-0 bg-white/60 md:bg-transparent rounded-2xl md:rounded-none"
            >
              <div
                class="w-14 h-14 md:w-16 md:h-16 bg-gradient-to-br from-verde-oliva to-verde-oliva/80 rounded-2xl md:rounded-full flex items-center justify-center mx-auto mb-3 md:mb-4 shadow-lg shadow-verde-oliva/20"
              >
                <svg
                  class="w-7 h-7 md:w-8 md:h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-negro-suave mb-1 md:mb-2 text-sm md:text-base">
                Cancelación Flexible
              </h3>
              <p class="text-negro-suave/70 text-xs md:text-sm leading-relaxed">
                Gratis hasta 48h antes
              </p>
            </div>

            <div
              class="benefit-card text-center p-5 md:p-0 bg-white/60 md:bg-transparent rounded-2xl md:rounded-none"
            >
              <div
                class="w-14 h-14 md:w-16 md:h-16 bg-gradient-to-br from-verde-oliva to-verde-oliva/80 rounded-2xl md:rounded-full flex items-center justify-center mx-auto mb-3 md:mb-4 shadow-lg shadow-verde-oliva/20"
              >
                <svg
                  class="w-7 h-7 md:w-8 md:h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                  ></path>
                </svg>
              </div>
              <h3 class="font-semibold text-negro-suave mb-1 md:mb-2 text-sm md:text-base">
                Beneficios Extra
              </h3>
              <p class="text-negro-suave/70 text-xs md:text-sm leading-relaxed">
                Upgrade disponible
              </p>
            </div>

            <div
              class="benefit-card text-center p-5 md:p-0 bg-white/60 md:bg-transparent rounded-2xl md:rounded-none"
            >
              <div
                class="w-14 h-14 md:w-16 md:h-16 bg-gradient-to-br from-verde-oliva to-verde-oliva/80 rounded-2xl md:rounded-full flex items-center justify-center mx-auto mb-3 md:mb-4 shadow-lg shadow-verde-oliva/20"
              >
                <svg
                  class="w-7 h-7 md:w-8 md:h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <h3 class="font-semibold text-negro-suave mb-1 md:mb-2 text-sm md:text-base">
                Confirmación Rápida
              </h3>
              <p class="text-negro-suave/70 text-xs md:text-sm leading-relaxed">
                Inmediata por email
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Habitaciones Disponibles -->
    <section class="py-16 md:py-20 bg-white relative">
      <div class="container mx-auto px-5 sm:px-6 lg:px-8">
        <!-- Encabezado móvil premium -->
        <div class="text-center mb-10 md:mb-16">
          <span
            class="text-verde-oliva text-xs tracking-[0.25em] uppercase font-medium block mb-3 md:hidden"
            >Alojamiento</span
          >
          <h2 class="font-serif text-3xl md:text-4xl font-bold text-negro-suave mb-4">
            Nuestras Habitaciones
          </h2>
          <p class="text-negro-suave/70 text-base md:text-lg max-w-2xl mx-auto leading-relaxed">
            <span class="hidden md:inline"
              >Espacios diseñados para tu comodidad, con desayuno buffet y acceso completo a todas
              nuestras instalaciones</span
            >
            <span class="md:hidden">Comodidad y elegancia con todos los servicios incluidos</span>
          </p>
        </div>

        <!-- Grid de habitaciones con scroll horizontal en móvil opcional -->
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 md:gap-8 max-w-7xl mx-auto mb-10 md:mb-12"
        >
          {rooms.map((room) => <RoomCard {...room} />)}
        </div>

        <div class="text-center">
          <a
            href="/habitaciones"
            class="inline-flex items-center gap-2 bg-cafe-claro text-white font-semibold px-8 py-4 rounded-full hover:bg-negro-suave transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            <span>Ver Todas las Habitaciones</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Servicios Incluidos -->
    <section class="py-14 md:py-16 bg-beige-premium relative overflow-hidden">
      <!-- Patrón decorativo sutil -->
      <div class="absolute inset-0 opacity-[0.02]">
        <div class="absolute -top-24 -right-24 w-96 h-96 border border-verde-oliva rounded-full">
        </div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 border border-cafe-claro rounded-full">
        </div>
      </div>

      <div class="container mx-auto px-5 sm:px-6 lg:px-8 relative z-10">
        <div class="max-w-5xl mx-auto">
          <!-- Encabezado premium móvil -->
          <div class="text-center mb-8 md:mb-12">
            <span
              class="text-verde-oliva text-xs tracking-[0.25em] uppercase font-medium block mb-3 md:hidden"
              >Servicios Premium</span
            >
            <h2 class="font-serif text-2xl md:text-3xl font-bold text-negro-suave">
              Todo incluido en tu estadía
            </h2>
          </div>

          <!-- Grid de servicios - Versión móvil compacta y elegante -->
          <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-3 md:gap-6">
            <div
              class="service-card flex flex-col md:flex-row items-center md:items-center gap-3 md:gap-4 bg-white p-4 md:p-6 rounded-2xl md:rounded-xl shadow-sm border border-negro-suave/5 text-center md:text-left"
            >
              <div
                class="w-11 h-11 md:w-12 md:h-12 bg-gradient-to-br from-verde-oliva/15 to-verde-oliva/5 rounded-xl flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-5 h-5 md:w-6 md:h-6 text-verde-oliva"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
