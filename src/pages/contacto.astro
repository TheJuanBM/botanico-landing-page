---
import CTAButton from '../components/CTAButton.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Navbar from '../components/Navbar.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Contacto y Reservas | Hotel Botánico Caucasia - Confirmación Inmediata"
  description="Reserva tu suite de lujo en Hotel Botánico con confirmación inmediata. Contáctanos 24/7 por teléfono, WhatsApp o email. Mejor precio garantizado en Caucasia, Bajo Cauca."
  keywords="reservar hotel botánico Caucasia, contacto hotel lujo, confirmación inmediata reserva, hotel premium Bajo Cauca, suites Caucasia"
>
  <Navbar />

  <main id="main-content">
    <Hero
      title="Contáctanos"
      backgroundImage="https://images.trvl-media.com/lodging/107000000/106490000/106485200/106485150/dc17e1c5.jpg?impolicy=resizecrop&rw=1200&ra=fit"
      subtitle="Estamos aquí para atenderte"
      height="medium"
      showCTA={false}
    />

    <!-- Contact Info Cards -->
    <section class="py-20 bg-white" id="contact-info">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="font-serif text-3xl font-bold text-negro-suave mb-12 text-center">
          Información de contacto
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto mb-16">
          <!-- Phone -->
          <div
            class="bg-beige-premium p-8 rounded-lg text-center hover:shadow-xl transition-shadow duration-300"
          >
            <div
              class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-verde-oliva mb-4"
            >
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <h3 class="font-serif text-xl font-semibold text-negro-suave mb-2">Teléfono</h3>
            <a
              href="tel:+573122094960"
              class="text-verde-oliva hover:text-negro-suave transition-colors font-medium"
            >
              +57 312 209 4960
            </a>
            <p class="text-gray-600 text-sm mt-2">Lun - Dom: 24/7</p>
          </div>

          <!-- Email -->
          <div
            class="bg-beige-premium p-8 rounded-lg text-center hover:shadow-xl transition-shadow duration-300"
          >
            <div
              class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-verde-oliva mb-4"
            >
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <h3 class="font-serif text-xl font-semibold text-negro-suave mb-2">Email</h3>
            <a
              href="mailto:recepcion@botanicohotelcaucasia.com"
              class="text-verde-oliva hover:text-negro-suave transition-colors font-medium break-all"
            >
              recepcion@botanicohotelcaucasia.com
            </a>
            <p class="text-gray-600 text-sm mt-2">Respuesta en 24h</p>
          </div>

          <!-- WhatsApp -->
          <div
            class="bg-beige-premium p-8 rounded-lg text-center hover:shadow-xl transition-shadow duration-300"
          >
            <div
              class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-verde-oliva mb-4"
            >
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
                ></path>
              </svg>
            </div>
            <h3 class="font-serif text-xl font-semibold text-negro-suave mb-2">WhatsApp</h3>
            <a
              href="https://wa.me/573122094960"
              target="_blank"
              rel="noopener noreferrer nofollow"
              class="text-verde-oliva hover:text-negro-suave transition-colors font-medium"
            >
              +57 312 209 4960
            </a>
            <p class="text-gray-600 text-sm mt-2">Chat directo</p>
          </div>
        </div>

        <!-- Form and Map Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-7xl mx-auto">
          <!-- Contact Form -->
          <div>
            <h2 class="font-serif text-3xl font-bold text-negro-suave mb-6">Envíanos un mensaje</h2>
            <form class="space-y-6" id="contact-form">
              <div>
                <label for="name" class="block text-sm font-medium text-negro-suave mb-2"
                  >Nombre completo *</label
                >
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-cafe-claro focus:ring-2 focus:ring-cafe-claro focus:ring-opacity-20 outline-none transition-all"
                  placeholder="Tu nombre"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-negro-suave mb-2"
                  >Email *</label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-cafe-claro focus:ring-2 focus:ring-cafe-claro focus:ring-opacity-20 outline-none transition-all"
                  placeholder="tu@email.com"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-negro-suave mb-2"
                  >Teléfono</label
                >
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-cafe-claro focus:ring-2 focus:ring-cafe-claro focus:ring-opacity-20 outline-none transition-all"
                  placeholder="+57 312 209 4960"
                />
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-negro-suave mb-2"
                  >Asunto *</label
                >
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-cafe-claro focus:ring-2 focus:ring-cafe-claro focus:ring-opacity-20 outline-none transition-all"
                >
                  <option value="">Selecciona una opción</option>
                  <option value="reserva">Reserva de habitación</option>
                  <option value="evento-privado">Evento privado</option>
                  <option value="evento-rooftop">Evento en MITO Rooftop</option>
                  <option value="informacion">Información general</option>
                  <option value="otro">Otro</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-negro-suave mb-2"
                  >Mensaje *</label
                >
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="5"
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-cafe-claro focus:ring-2 focus:ring-cafe-claro focus:ring-opacity-20 outline-none transition-all resize-none"
                  placeholder="Cuéntanos cómo podemos ayudarte..."></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-verde-oliva text-white px-8 py-4 rounded-full hover:bg-negro-suave transition-all duration-300 font-medium text-lg"
              >
                Enviar Mensaje
              </button>
            </form>
          </div>

          <!-- Map and Address -->
          <div class="space-y-8">
            <div>
              <h2 class="font-serif text-3xl font-bold text-negro-suave mb-6">Nuestra ubicación</h2>

              <div class="bg-beige-premium p-6 rounded-lg mb-6">
                <div class="flex items-start gap-4">
                  <svg
                    class="w-6 h-6 text-verde-oliva flex-shrink-0 mt-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <div>
                    <h3 class="font-semibold text-negro-suave mb-1">Dirección</h3>
                    <p class="text-gray-600">
                      Caucasia, Bajo Cauca<br />
                      Antioquia, Colombia
                    </p>
                  </div>
                </div>
              </div>

              <!-- Google Maps -->
              <div class="rounded-lg overflow-hidden shadow-lg">
                <div class="aspect-video bg-beige-premium">
                  <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3952.677!2d-75.2028681!3d7.9831562!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e5b6ff39f646617%3A0x76a39f2f4a614bc5!2sBotanico%20Hotel%20y%20Spa!5e0!3m2!1ses!2sco!4v1700000000000!5m2!1ses!2sco"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    title="Ubicación Botanico Hotel y Spa"></iframe>
                </div>
                <div class="bg-white p-4 text-center">
                  <a
                    href="https://www.google.com/maps/place/Botanico+Hotel+y+Spa/@7.9831562,-75.2028681,18z/data=!4m9!3m8!1s0x8e5b6ff39f646617:0x76a39f2f4a614bc5!5m2!4m1!1i2!8m2!3d7.9831541!4d-75.201865!16s%2Fg%2F11w43pwy1_"
                    target="_blank"
                    rel="noopener noreferrer nofollow"
                    class="inline-flex items-center gap-2 text-verde-oliva font-semibold hover:text-negro-suave transition-colors"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                      ></path>
                    </svg>
                    Abrir en Google Maps
                  </a>
                </div>
              </div>
            </div>

            <!-- Quick Reservation CTA -->
            <div class="bg-verde-oliva text-white p-8 rounded-lg">
              <h3 class="font-serif text-2xl font-bold mb-3">¿Prefieres reservar directamente?</h3>
              <p class="text-beige-premium mb-6">
                Accede a nuestro sistema de reservas online y asegura tu habitación con las mejores
                tarifas.
              </p>
              <CTAButton text="Reservar Ahora" size="md" class="w-full" />
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;

  form?.addEventListener('submit', ({ preventDefault }) => {
    preventDefault();

    alert('¡Gracias por tu mensaje! Nos pondremos en contacto contigo pronto.');
    form.reset();
  });
</script>
