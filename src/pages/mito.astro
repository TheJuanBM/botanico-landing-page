---
import { Image } from 'astro:assets';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
import Layout from '../layouts/Layout.astro';
import MITOImg from '../assets/mito/images/mito.webp';
---

<Layout
  title="MITO Rooftop | Bar de Lujo Incluido en Hotel Botánico Caucasia"
  description="Disfruta de MITO Rooftop, bar de lujo exclusivo incluido para huéspedes de Hotel Botánico. Coctelería premium, gastronomía de autor y vistas panorámicas. Reserva tu suite ahora."
  keywords="rooftop lujo Caucasia, MITO bar premium, hotel botánico rooftop incluido, eventos lujo Bajo Cauca, reservar hotel con rooftop"
>
  <Navbar />

  <main id="main-content">
    <!-- Hero Section - Inmersivo y Elegante -->
    <section
      class="relative h-screen flex items-center justify-center overflow-hidden bg-negro-suave"
    >
      <!-- Video/Image Background con efecto parallax -->
      <div class="absolute inset-0">
        <!-- Overlay principal más oscuro para mejor contraste -->
        <div class="absolute inset-0 bg-negro-suave/60 z-10"></div>
        <div
          class="absolute inset-0 bg-gradient-to-b from-negro-suave via-negro-suave/40 to-negro-suave z-10"
        >
        </div>
        <div
          class="absolute inset-0 bg-gradient-to-r from-negro-suave/70 via-transparent to-negro-suave/70 z-10"
        >
        </div>
        <Image
          src={MITOImg}
          alt="MITO Rooftop - Vista nocturna"
          class="w-full h-full object-cover scale-110 hero-parallax"
          loading="eager"
          fetchpriority="high"
          decoding="async"
          widths={[640, 768, 1024, 1280, 1536, 1920]}
          sizes="100vw"
          format="avif"
          quality={80}
        />
      </div>

      <!-- Partículas decorativas (reducidas para mejor performance) -->
      <div class="absolute inset-0 z-15 pointer-events-none overflow-hidden particles-container">
        <div class="particle particle-1"></div>
        <div class="particle particle-2"></div>
      </div>

      <!-- Contenido Hero -->
      <div class="relative z-20 text-center px-4 sm:px-6 lg:px-8 max-w-5xl mx-auto">
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-md border border-white/20 rounded-full px-5 py-2 mb-8 hero-animate hero-delay-1"
        >
          <span class="w-2 h-2 bg-amber-400 rounded-full animate-pulse"></span>
          <span class="text-beige-premium text-sm tracking-wider uppercase font-medium"
            >Abierto hoy hasta las 2:00 AM</span
          >
        </div>

        <!-- Logo/Nombre -->
        <h1
          class="font-serif text-6xl sm:text-7xl md:text-8xl lg:text-9xl font-bold text-white mb-4 tracking-tight hero-animate hero-delay-2 hero-title"
        >
          MITO
        </h1>

        <p
          class="text-xl sm:text-2xl md:text-3xl text-beige-premium mb-2 font-light tracking-[0.3em] uppercase hero-animate hero-delay-3 hero-subtitle"
        >
          Rooftop
        </p>

        <p
          class="text-lg md:text-xl text-white/90 max-w-2xl mx-auto leading-relaxed mb-12 hero-animate hero-delay-4 hero-description"
        >
          Donde el cielo se encuentra con la gastronomía de autor
        </p>

        <!-- CTAs Principales -->
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center items-center hero-animate hero-delay-5"
        >
          <!-- CTA Primario: Ver Carta -->
          <a
            href="#carta"
            class="group relative inline-flex items-center gap-3 bg-white text-negro-suave px-10 py-5 rounded-full font-semibold text-lg transition-all duration-500 hover:bg-amber-50 hover:scale-105 hover:shadow-[0_0_40px_rgba(255,255,255,0.3)]"
          >
            <svg
              class="w-6 h-6 transition-transform duration-300 group-hover:rotate-12"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              ></path>
            </svg>
            <span>Ver Carta</span>
            <span
              class="absolute -top-2 -right-2 bg-amber-400 text-negro-suave text-xs px-2 py-1 rounded-full font-bold animate-bounce"
              >Nuevo</span
            >
          </a>

          <!-- CTA Secundario: Reservar -->
          <a
            href="https://hotels.cloudbeds.com/es/reservation/QZE4hg?currency=cop"
            target="_blank"
            rel="noopener noreferrer"
            class="group inline-flex items-center gap-3 bg-transparent border-2 border-white/40 text-white px-10 py-5 rounded-full font-medium text-lg transition-all duration-500 hover:bg-white/10 hover:border-white/80 backdrop-blur-sm"
          >
            <span>Reservar Mesa</span>
            <svg
              class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div
        class="absolute bottom-8 inset-x-0 z-20 flex flex-col items-center gap-2 hero-animate hero-delay-6"
      >
        <span class="text-white/50 text-xs tracking-widest uppercase">Descubre más</span>
        <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center pt-2">
          <div class="w-1.5 h-3 bg-white/60 rounded-full animate-scroll-down"></div>
        </div>
      </div>
    </section>

    <!-- Quick Info Bar -->
    <section class="bg-negro-suave py-6 border-y border-white/10">
      <div class="container mx-auto px-4">
        <div class="flex flex-wrap justify-center gap-8 md:gap-16 text-center">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-amber-400/20 flex items-center justify-center">
              <svg
                class="w-5 h-5 text-amber-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div class="text-left">
              <p class="text-white/50 text-xs uppercase tracking-wider">Ubicación</p>
              <p class="text-white font-medium">Piso 7, Hotel Botánico</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-amber-400/20 flex items-center justify-center">
              <svg
                class="w-5 h-5 text-amber-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="text-left">
              <p class="text-white/50 text-xs uppercase tracking-wider">Horario</p>
              <p class="text-white font-medium">5PM - 2AM</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-amber-400/20 flex items-center justify-center">
              <svg
                class="w-5 h-5 text-amber-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <div class="text-left">
              <p class="text-white/50 text-xs uppercase tracking-wider">Reservas</p>
              <p class="text-white font-medium">+57 312 209 4960</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Sección Carta/Menú - Prioridad Visual -->
    <section
      id="carta"
      class="relative py-32 bg-gradient-to-b from-negro-suave via-[#1a1a1a] to-negro-suave overflow-hidden section-lazy"
    >
      <!-- Decoración de fondo -->
      <div class="absolute inset-0 opacity-30">
        <div class="absolute top-20 left-10 w-72 h-72 bg-amber-400/10 rounded-full blur-[100px]">
        </div>
        <div
          class="absolute bottom-20 right-10 w-96 h-96 bg-verde-oliva/10 rounded-full blur-[120px]"
        >
        </div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <!-- Header de sección -->
        <div class="text-center mb-20">
          <span
            class="inline-block text-amber-400 text-sm tracking-[0.3em] uppercase mb-4 font-medium"
            >Experiencia Gastronómica</span
          >
          <h2 class="font-serif text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6">
            Nuestra Carta
          </h2>
          <p class="text-white/60 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
            Una selección curada de platos y cócteles que fusionan lo mejor de la cocina
            internacional con sabores locales
          </p>
        </div>

        <!-- Grid de categorías del menú -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto mb-16">
          <!-- Cócteles -->
          <div
            class="group relative bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-sm border border-white/10 rounded-3xl p-8 transition-all duration-500 hover:border-amber-400/50 hover:shadow-[0_0_50px_rgba(251,191,36,0.1)] overflow-hidden"
          >
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-amber-400/10 rounded-full blur-3xl transition-all duration-500 group-hover:w-40 group-hover:h-40"
            >
            </div>
            <div class="relative z-10">
              <div
                class="w-16 h-16 bg-gradient-to-br from-amber-400 to-amber-600 rounded-2xl flex items-center justify-center mb-6 shadow-lg shadow-amber-400/20 transition-transform duration-500 group-hover:scale-110 group-hover:rotate-3"
              >
                <svg
                  class="w-8 h-8 text-negro-suave"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <h3 class="font-serif text-2xl font-bold text-white mb-3">Coctelería de Autor</h3>
              <p class="text-white/60 mb-6 leading-relaxed">
                Creaciones únicas de nuestros mixólogos con ingredientes locales premium
              </p>
              <div class="flex items-center justify-between">
                <span class="text-amber-400 font-semibold">12 Cócteles</span>
                <span class="text-white/40 text-sm">Desde $28.000</span>
              </div>
            </div>
          </div>

          <!-- Platos Principales -->
          <div
            class="group relative bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-sm border border-white/10 rounded-3xl p-8 transition-all duration-500 hover:border-verde-oliva/50 hover:shadow-[0_0_50px_rgba(97,90,64,0.2)] overflow-hidden"
          >
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-verde-oliva/20 rounded-full blur-3xl transition-all duration-500 group-hover:w-40 group-hover:h-40"
            >
            </div>
            <div class="relative z-10">
              <div
                class="w-16 h-16 bg-gradient-to-br from-verde-oliva to-[#4a4530] rounded-2xl flex items-center justify-center mb-6 shadow-lg shadow-verde-oliva/20 transition-transform duration-500 group-hover:scale-110 group-hover:rotate-3"
              >
                <svg
                  class="w-8 h-8 text-beige-premium"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  ></path>
                </svg>
              </div>
              <h3 class="font-serif text-2xl font-bold text-white mb-3">Platos Principales</h3>
              <p class="text-white/60 mb-6 leading-relaxed">
                Gastronomía premium con los mejores cortes y productos del mar
              </p>
              <div class="flex items-center justify-between">
                <span class="text-verde-oliva font-semibold">18 Platos</span>
                <span class="text-white/40 text-sm">Desde $45.000</span>
              </div>
            </div>
          </div>

          <!-- Tapas & Picadas -->
          <div
            class="group relative bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-sm border border-white/10 rounded-3xl p-8 transition-all duration-500 hover:border-cafe-claro/50 hover:shadow-[0_0_50px_rgba(164,141,117,0.15)] overflow-hidden md:col-span-2 lg:col-span-1"
          >
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-cafe-claro/20 rounded-full blur-3xl transition-all duration-500 group-hover:w-40 group-hover:h-40"
            >
            </div>
            <div class="relative z-10">
              <div
                class="w-16 h-16 bg-gradient-to-br from-cafe-claro to-[#8a7560] rounded-2xl flex items-center justify-center mb-6 shadow-lg shadow-cafe-claro/20 transition-transform duration-500 group-hover:scale-110 group-hover:rotate-3"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z"
                  ></path>
                </svg>
              </div>
              <h3 class="font-serif text-2xl font-bold text-white mb-3">Tapas & Picadas</h3>
              <p class="text-white/60 mb-6 leading-relaxed">
                Perfectas para compartir mientras disfrutas de la vista panorámica
              </p>
              <div class="flex items-center justify-between">
                <span class="text-cafe-claro font-semibold">15 Opciones</span>
                <span class="text-white/40 text-sm">Desde $22.000</span>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA Ver Carta Completa -->
        <div class="text-center">
          <a
            href="#"
            class="group inline-flex items-center gap-4 bg-gradient-to-r from-amber-400 to-amber-500 text-negro-suave px-12 py-5 rounded-full font-bold text-lg transition-all duration-500 hover:shadow-[0_0_50px_rgba(251,191,36,0.4)] hover:scale-105"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              ></path>
            </svg>
            <span>Ver Carta Completa</span>
            <svg
              class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Sección Experiencia -->
    <section class="relative py-32 bg-beige-premium overflow-hidden section-lazy">
      <!-- Patrón decorativo -->
      <div class="absolute inset-0 opacity-5">
        <div
          class="absolute inset-0"
          style='background-image: url(&apos;data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23111111" fill-opacity="1"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E&apos;);'
        >
        </div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center max-w-7xl mx-auto">
          <!-- Imagen/Visual -->
          <div class="relative">
            <div class="relative aspect-[4/5] rounded-3xl overflow-hidden shadow-2xl">
              <Image
                src={MITOImg}
                alt="Experiencia MITO Rooftop"
                class="w-full h-full object-cover"
                loading="lazy"
                decoding="async"
                widths={[400, 600, 800]}
                sizes="(max-width: 1024px) 100vw, 50vw"
                format="avif"
                quality={75}
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-negro-suave/60 via-transparent to-transparent"
              >
              </div>
            </div>
            <!-- Badge flotante -->
            <div
              class="absolute -bottom-6 -right-6 bg-negro-suave text-white p-6 rounded-2xl shadow-xl"
            >
              <p class="text-4xl font-serif font-bold text-amber-400">360°</p>
              <p class="text-sm text-white/70">Vista panorámica</p>
            </div>
            <!-- Elemento decorativo -->
            <div
              class="absolute -top-8 -left-8 w-24 h-24 border-2 border-verde-oliva/30 rounded-full"
            >
            </div>
          </div>

          <!-- Contenido -->
          <div class="lg:pl-8">
            <span
              class="inline-block text-verde-oliva text-sm tracking-[0.3em] uppercase mb-4 font-medium"
              >La Experiencia</span
            >
            <h2
              class="font-serif text-4xl md:text-5xl font-bold text-negro-suave mb-6 leading-tight"
            >
              Un refugio sobre<br />las nubes
            </h2>
            <p class="text-gray-600 text-lg leading-relaxed mb-8">
              MITO no es solo un rooftop, es una experiencia sensorial completa. Desde el momento en
              que el ascensor se abre en el piso 7, te transportas a un mundo donde el cielo del
              Bajo Cauca se convierte en tu techo y cada atardecer es un espectáculo único.
            </p>

            <!-- Features -->
            <div class="grid grid-cols-2 gap-6 mb-10">
              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 bg-verde-oliva/10 rounded-xl flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-6 h-6 text-verde-oliva"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-negro-suave mb-1">Ambiente Premium</h3>
                  <p class="text-gray-500 text-sm">Diseño sofisticado y exclusivo</p>
                </div>
              </div>
              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 bg-verde-oliva/10 rounded-xl flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-6 h-6 text-verde-oliva"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-negro-suave mb-1">Música en Vivo</h3>
                  <p class="text-gray-500 text-sm">Viernes y sábados</p>
                </div>
              </div>
              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 bg-verde-oliva/10 rounded-xl flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-6 h-6 text-verde-oliva"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
