    <!-- Bottom Bar -->
    <div class="border-t border-white/10 pt-6 md:pt-8 text-center text-xs md:text-sm text-white/70">
      <p>&copy; {currentYear} Hotel Botánico. Todos los derechos reservados.</p>
    </div>
  </div>
