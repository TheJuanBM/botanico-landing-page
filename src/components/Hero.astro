---
import CTAButton from './CTAButton.astro';

interface Props {
  title: string;
  subtitle?: string;
  backgroundImage?: string;
  height?: 'full' | 'large' | 'medium';
  showCTA?: boolean;
}

const {
  title,
  subtitle,
  backgroundImage = '../assets/botanico/images/hero-1.webp',
  height = 'full',
  showCTA = true,
} = Astro.props;

const heightClasses = {
  full: 'h-screen',
  large: 'h-[80vh]',
  medium: 'h-[60vh]',
};
---

<section
  class={`relative ${heightClasses[height]} flex items-center justify-center overflow-hidden`}
>
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 bg-negro-suave">
    <div
      class="absolute inset-0 bg-gradient-to-b from-negro-suave/60 via-negro-suave/40 to-negro-suave/60 z-10"
    >
    </div>
    <!-- Background Image -->
    <img
      src={backgroundImage}
      alt="Hotel BotÃ¡nico"
      class="w-full h-full object-cover"
      loading="eager"
      decoding="async"
      fetchpriority="high"
    />
  </div>

  <!-- Content -->
  <div class="relative z-20 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
    <h1
      class="font-serif text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight animate-fade-in"
    >
      {title}
    </h1>

    {
      subtitle && (
        <p class="text-lg sm:text-xl md:text-2xl text-beige-premium mb-8 max-w-2xl mx-auto leading-relaxed animate-fade-in-delay">
          {subtitle}
        </p>
      )
    }

    {
      showCTA && (
        <div class="animate-fade-in-delay-2">
          <CTAButton text="Reservar Ahora" size="lg" />
        </div>
      )
    }
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20 animate-bounce">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }

  .animate-fade-in-delay {
    animation: fade-in 1s ease-out 0.3s both;
  }

  .animate-fade-in-delay-2 {
    animation: fade-in 1s ease-out 0.6s both;
  }
</style>
