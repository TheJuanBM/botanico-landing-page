---
import LoadingScreen from '../components/LoadingScreen.astro';
import '../styles/fonts.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  keywords?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  image = '/og-image.jpg',
  keywords = 'hotel botánico Caucasia, reservar hotel lujo, suites premium Bajo Cauca, confirmación inmediata hotel, alojamiento incluido desayuno, hotel 4 estrellas Antioquia',
  noindex = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.site).toString();
const siteName = 'Hotel Botánico';
const baseUrl = Astro.site?.toString() || 'https://www.hotelbotanicocaucasia.com';

// Generar breadcrumbs dinámicos
const pathSegments = Astro.url.pathname.split('/').filter(Boolean);
const breadcrumbNames: Record<string, string> = {
  habitaciones: 'Habitaciones',
  mito: 'MITO Rooftop',
  galeria: 'Galería',
  contacto: 'Contacto',
  reservar: 'Reservar',
  'guia-caucasia': 'Guía de Caucasia',
};

const breadcrumbs = [{ name: 'Hotel Botánico', url: baseUrl }];

let currentPath = '';
for (const segment of pathSegments) {
  currentPath += `/${segment}`;
  if (breadcrumbNames[segment]) {
    breadcrumbs.push({
      name: breadcrumbNames[segment],
      url: `${baseUrl}${currentPath}`,
    });
  }
}
