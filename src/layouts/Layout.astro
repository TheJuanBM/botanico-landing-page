    <div id="page-content">
      <slot />
    </div>
    <style is:global>
      * {
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
        overflow-x: hidden;
      }

      /* Variables CSS para safe-area */
      :root {
        --safe-area-inset-top: env(safe-area-inset-top, 0);
        --safe-area-inset-right: env(safe-area-inset-right, 0);
        --safe-area-inset-bottom: env(safe-area-inset-bottom, 0);
        --safe-area-inset-left: env(safe-area-inset-left, 0);
      }

      body {
        margin: 0;
        padding: 0;
        padding-top: var(--safe-area-inset-top);
        padding-right: var(--safe-area-inset-right);
        padding-bottom: var(--safe-area-inset-bottom);
        padding-left: var(--safe-area-inset-left);
        overflow-x: hidden;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      /* Asegurar que el navbar sea visible en PWA standalone y respete safe-area */
      #navbar {
        top: var(--safe-area-inset-top);
        left: var(--safe-area-inset-left);
        right: var(--safe-area-inset-right);
        padding-left: max(var(--safe-area-inset-left), 0);
        padding-right: max(var(--safe-area-inset-right), 0);
      }

      /* El contenido debe empezar desde arriba, el navbar está sobrepuesto */
      #page-content {
        min-height: 100vh;
        padding-left: var(--safe-area-inset-left);
        padding-right: var(--safe-area-inset-right);
      }

      /* Asegurar que elementos full-width respeten safe-area */
      .full-width-safe {
        margin-left: calc(-1 * var(--safe-area-inset-left));
        margin-right: calc(-1 * var(--safe-area-inset-right));
        padding-left: var(--safe-area-inset-left);
        padding-right: var(--safe-area-inset-right);
      }

      /* Footer respeta safe-area inferior */
      footer {
        padding-bottom: calc(3rem + var(--safe-area-inset-bottom));
      }

      @media (min-width: 1024px) {
        footer {
          padding-bottom: calc(4rem + var(--safe-area-inset-bottom));
        }
      }

      /* Scrollbar moderna y elegante */
      ::-webkit-scrollbar {
        width: 10px;
        height: 10px;
      }

      ::-webkit-scrollbar-track {
        background: linear-gradient(180deg, #ebe2db 0%, #f5f0eb 100%);
        border-radius: 10px;
      }

      ::-webkit-scrollbar-thumb {
        background: linear-gradient(180deg, #615a40 0%, #4a4530 100%);
        border-radius: 10px;
        border: 2px solid #ebe2db;
        transition: all 0.3s ease;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(180deg, #7a7252 0%, #615a40 100%);
        border-color: #ddd4cb;
      }

      ::-webkit-scrollbar-thumb:active {
        background: linear-gradient(180deg, #4a4530 0%, #3a3525 100%);
      }

      ::-webkit-scrollbar-corner {
        background: #ebe2db;
      }

      /* Firefox */
      * {
        scrollbar-width: thin;
        scrollbar-color: #615a40 #ebe2db;
      }

      /* Scrollbar para contenedores específicos con overflow */
      .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
        height: 6px;
      }

      .custom-scrollbar::-webkit-scrollbar-thumb {
        border-width: 1px;
      }

      /* Skip to content - Screen reader only until focused */
      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
      }

      .focus\:not-sr-only:focus {
        position: static;
        width: auto;
        height: auto;
        padding: inherit;
        margin: inherit;
        overflow: visible;
        clip: auto;
        white-space: normal;
      }

      /* Focus visible improvements */
      *:focus-visible {
        outline: 2px solid #615a40;
        outline-offset: 2px;
        border-radius: 4px;
      }

      button:focus-visible,
      a:focus-visible {
        outline: 2px solid #615a40;
        outline-offset: 2px;
      }

      /* Estilos del calendario HeroUI - movidos aquí para evitar CSS inline repetido */
      [data-slot='cell'] button {
        color: #2d2d2d !important;
        font-weight: 500;
      }
      [data-slot='cell'] button[data-selected='true'],
      [data-slot='cell'] button[data-selection-start='true'],
      [data-slot='cell'] button[data-selection-end='true'] {
        background-color: #5c6b4a !important;
        color: white !important;
        font-weight: 600;
      }
      [data-slot='cell'] button[data-selection-start='true'] {
        border-radius: 9999px 0 0 9999px !important;
      }
      [data-slot='cell'] button[data-selection-end='true'] {
        border-radius: 0 9999px 9999px 0 !important;
      }
      [data-slot='cell']
        button[data-range-selection='true']:not([data-selection-start='true']):not(
          [data-selection-end='true']
        ) {
        background-color: #5c6b4a !important;
        color: white !important;
        border-radius: 0 !important;
        opacity: 0.7;
      }
      [data-slot='cell'] button[data-today='true'],
      [data-slot='cell-button'][data-today='true'],
      button[data-today='true'],
      td[data-today='true'] button,
      [data-today='true'] {
        background-color: #5c6b4a !important;
        color: white !important;
        font-weight: 700 !important;
